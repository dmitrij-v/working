.show-recipe
  .buttons
    = link_to 'Back to list', show_admin_recipe_index_path
    = link_to 'Edit', edit_recipe_admin_recipe_path
    = create_public_link(@recipe)
  .recipe-card
    %h2
      = @recipe.title
    .description
      %img(src="#{@recipe.image_link}")
      .ingredients
        %h2 Ingredients
        = render partial: 'recipies/ingredient', collection: @recipe.ingredients
      .instruction
        %h2 Instruction
        = render partial: 'recipies/step', collection: @recipe.steps